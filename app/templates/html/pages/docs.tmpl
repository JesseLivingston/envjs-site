{{ extend $.env( "templates" ) + "html/base.tmpl" }}
{{ block main }}
<div id='docs'>
    <h3>documentation</h3>
    {{ each versions }}
    <h4 style='text-align:center'>${ this.name }</h4>
    <div class='first column span-11 colborder '>
        <ul>
            <li>
                <a href='${ $.env("root")+"doc/guide/"+this.$id.replace("envjs-","") }' >
                    <em> ${ this.$id } </em>
                    <strong> Guide </strong>
                    <img
                        src=' ${ $.env("root")+"images/icon-green.png" }'
                        alt='Guide ${ this.$id }'
                        height='50px'
                    />
                </a>
            </li>
        </ul>
    </div>
    <div class=' last column  span-10'>
        <ul>
            <li>
                <a href='${ $.env("root")+"doc/api/"+this.$id.replace("envjs-","") }' >
                    <img
                        src=' ${ $.env("root")+"images/icon-brown.png" }'
                        alt='API ${ this.$id }'
                        height='50px'
                    />
                    <em> ${ this.$id } </em>
                    <strong> API </strong>
                </a>
            </li>
        </ul>
    </div>
    {{ /each }}
</div>
{{ /block }}