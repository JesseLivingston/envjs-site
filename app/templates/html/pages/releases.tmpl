{{ extend $.env( "templates" ) + "html/base.tmpl" }}
{{ block main }}
<div id='releases'>
    <h3>releases</h3>
    <div class='first column span-10 colborder'>
        <ul>
        {{ each releases }}
            <li>
                <div class='span-9 column'>
                    <a href='${ $.env("root")+"release/"+this.$id }'>
                        <strong>${ this.name }</strong>
                    </a>
                    <br/>
                    <a href='${ this.zip }'>
                        <img
                            src='${ $.env("root")+"images/zip.jpg" }'
                            alt='zip'
                            height='70px'
                        />
                    </a>
                    <a href='${ this.tar }'>
                        <img
                            src='${ $.env("root")+"images/tar.jpg" }'
                            alt='tar'
                            height='70px'
                        />
                    </a>
                    <div class='span-3 column'>
                        <span>for more informations and downloads related to this release</span>
                        <a href='${ $.env("root")+"release/"+this.$id }'>
                            click here
                        </a>
                    </div>
               </div>
            </li>
        {{ /each }}
        </ul>
    </div>
    <div class='last column span-10'>
        <ul>
        {{ each releases }}
            <li>
                <div class='span-10'>
                {{ html this.description }}
                </div>
            </li>
        {{ /each }}
        </ul>
    </div>
</div>
{{ /block }}
